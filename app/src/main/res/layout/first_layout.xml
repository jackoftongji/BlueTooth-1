<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="编号">
                </TextView>
                <EditText
                    android:id="@+id/id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Experimenters_id"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="超声波数据">
                </TextView>
                <EditText
                    android:enabled="false"
                    android:id="@+id/waveform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="wave_data"
                    android:maxLines="1"
                    android:inputType="text"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="设备名称">
                </TextView>
                <EditText
                    android:id="@+id/equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="equipment"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="地点">
                </TextView>
                <EditText
                    android:id="@+id/construction_site"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="construction_site"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="试验段">
                </TextView>
                <EditText
                    android:id="@+id/section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="section"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="实验人员">
                </TextView>
                <EditText
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Experimenters"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="上传时间">
                </TextView>
                <EditText
                    android:id="@+id/upload_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="upload_date"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="创建时间">
                </TextView>
                <EditText
                    android:id="@+id/found_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="found_date"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/remember_info"
                    android:checked="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Remember Information"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/collect_data_again"
                android:text="collect data again"
                android:onClick="collectDataAgain"/>

            <Button
                android:id="@+id/Button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="send" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="编号">
                </TextView>
                <EditText
                    android:id="@+id/query_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="query_id"
                    />
                <Button
                    android:id="@+id/Button_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="query"
                    />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</LinearLayout>